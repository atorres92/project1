<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity" >

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/imageView" android:src="@drawable/stacker1" android:layout_gravity="center"
            android:layout_weight="2" android:padding="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" android:padding="25dp">

        <FrameLayout
            android:id="@+id/frameSpacer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="100dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true">

        </FrameLayout>

        <EditText
            android:id="@+id/player1Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/frameSpacer"
            android:inputType="text"
            android:ems="10" />

        <EditText
            android:id="@+id/player2Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/frameSpacer"
            android:layout_below="@id/player1Input"
            android:inputType="text"
            android:ems="10" />

        <TextView
            android:id="@+id/player2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player2Input"
            android:layout_alignBottom="@+id/player2Input"
            android:layout_toLeftOf="@+id/frameSpacer"
            android:text="@string/player2"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="15sp"/>

        <TextView
            android:id="@+id/player1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/player1Input"
            android:layout_alignBottom="@+id/player1Input"
            android:layout_alignLeft="@+id/player2Label"
            android:text="@string/player1"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="15sp"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onStartGame"
            android:text="@string/startgame" android:textSize="15sp" android:padding="10dp"/>

    </FrameLayout>

</LinearLayout>
