<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/stackerdescription"
        android:padding="5dp"
        android:src="@drawable/stacker1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.25"
        android:padding="10dp" >

        <FrameLayout
            android:id="@+id/frameSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:padding="25dp"
            android:paddingRight="100dp" >
        </FrameLayout>

        <TextView
            android:id="@+id/Player2Loser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frameSpacer"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/Player2Score"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/Player1Winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/player2Label"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/Player1Score"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/endGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameSpacer"
            android:layout_centerHorizontal="true"
            android:onClick="onRestartGame"
            android:padding="10dp"
            android:text="@string/ReturnGame"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>