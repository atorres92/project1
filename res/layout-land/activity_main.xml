<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity" >

    <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView" android:src="@drawable/stacker1" android:layout_gravity="center"
            android:layout_weight="1" android:padding="10dp" android:contentDescription="@string/stackerdescription"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" android:padding="10dp">

        <FrameLayout
            android:id="@+id/frameSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true" android:paddingRight="100dp" android:padding="25dp">

        </FrameLayout>

        <EditText
            android:id="@+id/player1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10" android:layout_centerHorizontal="true" android:layout_alignBottom="@+id/player1Label"
            android:layout_marginRight="200dp"/>

        <EditText
            android:id="@+id/player2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10" android:layout_above="@+id/frameSpacer" android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false" android:padding="20dp" android:layout_marginRight="200dp"/>

        <TextView
            android:id="@+id/player2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignBottom="@+id/player2Input" android:layout_toLeftOf="@+id/player2Input"/>

        <TextView
            android:id="@+id/player1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignTop="@+id/player2Input" android:layout_alignLeft="@+id/player2Label"
            android:layout_alignStart="@+id/player2Label"/>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </FrameLayout>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onStartGame"
            android:text="@string/startgame" android:textSize="15sp" android:padding="25dp"
            android:layout_below="@+id/frameSpacer" android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
